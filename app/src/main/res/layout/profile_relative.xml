<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold_yellow">

    <ImageView
        android:id="@+id/topImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_account_circle_24"
        />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:layout_centerInParent="true"
        android:textSize="@dimen/medium_text_size"
        android:layout_above="@+id/name"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/medium_text_size"
        android:text="Personal Info"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/medium_text_size"
        android:layout_above="@+id/edt_name"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/medium_text_size"
        android:text="Name"
        />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/email"
        android:gravity="left"
        android:hint="enter name"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/medium_text_size"
        android:layout_above="@+id/edt_email"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/medium_text_size"
        android:text="Email"
        />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_centerInParent="true"
        android:gravity="left"
        android:hint="enter email"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/medium_text_size"
        android:layout_below="@+id/edt_email"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/medium_text_size"
        android:text="Mobile"
        />

    <EditText
        android:id="@+id/edt_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mobile"
        android:gravity="left"
        android:hint="add mobile"
        android:minHeight="48dp" />


    <TextView
        android:id="@+id/postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/medium_text_size"
        android:layout_below="@+id/edt_mobile"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/medium_text_size"
        android:text="Mobile"
        />

    <EditText
        android:id="@+id/edt_postcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/postcode"
        android:gravity="left"
        android:hint="add mobile"
        android:minHeight="48dp" />








</RelativeLayout>